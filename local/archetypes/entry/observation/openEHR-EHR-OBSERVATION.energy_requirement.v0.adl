														list = <
															["1"] = <
																units = <"kcal">
																precision = <|0|>
															>
															["2"] = <
																units = <"J">
															>
														>
													>
												}
											}
										}
									}
									ELEMENT[at0010] occurrences matches {0..1} matches {	-- Rest Energy Expenditure
										value matches {
											C_DV_QUANTITY <
												property = <[openehr::121]>
												list = <
													["1"] = <
														units = <"kcal">
														precision = <|0|>
													>
													["2"] = <
														units = <"J">
													>
												>
											>
										}
									}
									ELEMENT[at0028] occurrences matches {0..1} matches {	-- Estimated Energy Requirement 
										value matches {
											C_DV_QUANTITY <
												property = <[openehr::121]>
												list = <
													["1"] = <
														units = <"kcal">
														precision = <|0|>
													>
													["2"] = <
														units = <"J">
													>
												>
											>
										}
									}
								}
							}
						}
					}
				}
			}
		}

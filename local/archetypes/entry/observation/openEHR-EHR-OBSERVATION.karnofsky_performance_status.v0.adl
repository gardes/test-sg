	details = <
		["en-us"] = <
			language = <[ISO_639-1::en-us]>
			purpose = <"A scale to evaluate the functional status (performance) of a patient with cancer.">
			use = <"This scale was originally developed in the context of evaluation of oncologic patients.
This perfromance scale is destined for oncological patients.
It implies evaluating the need for hospital admission.">
			keywords = <"*KPS(pt)", "*Karnofsky Performance Status(pt)", "*Performance Status(pt)", "KPS", "Performance Status", "Karnofsky Performance Status">
			misuse = <"For other contexts, such as palliative care or care in hospices, it might not be adequate. ">
			copyright = <"© openEHR Foundation">
		>
		["pt"] = <
			language = <[ISO_639-1::pt]>
			purpose = <"Para avaliar o estado de desempenho funcional de um paciente com câncer. ">
			use = <"Esta escala foi originalmente desenvolvida no contexto de se avaliar a  pacientes oncológicos. 
Esta escala de estado de desempenho destina-se a pacientes oncológicos.
Ela implicam em necessidade de internação hospitalar. ">
			keywords = <"KPS", "Karnofsky Performance Status", "Performance Status">
			misuse = <"Para outros contextos, tal como cuidados paliativos domiciliares (\"home care\") ou cuidados em instituições de longa permanência ou \"hospices\", ela pode não ser adequada. ">
			copyright = <"© openEHR Foundation">
		>
	>

definition
	OBSERVATION[at0000] matches {	-- Karnofsky Performance Status
		data matches {
			HISTORY[at0001] matches {	-- *Event Series(pt)
				events cardinality matches {1..*; unordered} matches {
					POINT_EVENT[at0002] occurrences matches {0..1} matches {	-- *Any event(pt)
						data matches {
							ITEM_TREE[at0003] matches {	-- *Tree(pt)
								items cardinality matches {3..*; unordered} matches {
									ELEMENT[at0004] occurrences matches {1..*} matches {	-- Date
										value matches {
											DV_DATE matches {
												value matches {yyyy-mm-dd}
											}
										}
									}
									ELEMENT[at0005] occurrences matches {1..*} matches {	-- Time
										value matches {
											DV_TIME matches {
												value matches {HH:MM:??}
											}
										}
									}
									CLUSTER[at0021] occurrences matches {0..1} matches {	-- Condition C
										items cardinality matches {1..*; unordered} matches {
											ELEMENT[at0022] occurrences matches {0..1} matches {	-- *Performance
												value matches {
													0|[local::at0027], 	-- Dead.
													10|[local::at0026], 	-- 	Moribund, fatal processes progressing rapidly.
													20|[local::at0023], 	-- Hospitalization necessary, very sick, active supportive treatment necessary. 
													30|[local::at0024], 	-- Severely disabled, hospitalization is indicated although death not imminent. 
													40|[local::at0025]  	-- Disabled, requires special care and assistance.
												}
											}
										}
									}
									CLUSTER[at0014] occurrences matches {0..1} matches {	-- Condition B
										items cardinality matches {1..*; unordered} matches {
											ELEMENT[at0015] occurrences matches {0..1} matches {	-- *Performance
												value matches {
													50|[local::at0020], 	-- Requires considerable assistance and frequent medical care.
													60|[local::at0019], 	-- Requires occasional assistance, but is able to care for most of his needs.
													70|[local::at0018]  	-- Cares for self, unable to carry on normal activity or to do active work.
												}
											}
										}
									}
									CLUSTER[at0006] occurrences matches {0..1} matches {	-- Condition A
										items cardinality matches {1; unordered} matches {
											ELEMENT[at0008] matches {	-- *Performance(pt)
												value matches {
													80|[local::at0013], 	-- *Atividade normal com esforço, alguns sinais ou sintomas de doença(pt)
													90|[local::at0012], 	-- *Capaz de conduzir atividades normais, sinais ou sintomas menores de doença(pt)
													100|[local::at0011]  	-- *Normal, sem queixas ou evidência de doença.(pt)
												}
											}
										}
									}
								}
							}
						}
					}
				}
			}
		}
	}


	terminologies_available = <"SNOMED-CT", ...>
	term_definitions = <
		["en"] = <
			items = <
				["at0000"] = <
					text = <"BI-RADS grade">
					description = <"Grading of liklihood of breast malignancy based primarily on imaging findings as defined by American College of Radiology BI-RADS grade.">
				>
				["at0004"] = <
					text = <"Comments">
					description = <"Additional comment.">
				>
				["at0005"] = <
					text = <"BI-RADS grade">
					description = <"The assessment of BI-RADS grade based primarily on findings from imaging studies.">
				>
				["at0006"] = <
					text = <"0: Incomplete">
					description = <"Need additional imaging evaluation and/or prior Mammograms for comparison.">
				>
				["at0007"] = <
					text = <"1: Negative">
					description = <"Negative : There is nothing to comment on.">
				>
				["at0008"] = <
					text = <"2: Benign finding(s)">
					description = <"Normal assessment but the interpreter chooses to describe a benign finding in the report.">
				>
				["at0009"] = <
					text = <"3: Probably benign finding">
					description = <"Probably benign finding - Initial short-interval follow-up suggested.">
				>
				["at0010"] = <
					text = <"4: Suspicious abnormality">
					description = <"Suspcious abnormaility - biopsy should be considered.">
				>
				["at0011"] = <
					text = <"4a: Suspicious abnormality - low concern">
					description = <"A finding with low suspicion of malignancy merits intervention.">
				>
				["at0012"] = <
					text = <"4b: Suspicious abnormality - intermediate concern">
					description = <"A finding with intermediate suspicion of malignancy merits intervention.">
				>
				["at0013"] = <
					text = <"4c: Suspicious abnormality - moderate concern">
					description = <"A finding with moderate suspicion of malignancy merits intervention.">
				>
				["at0014"] = <
					text = <"5: Highly suggestive of malignancy">
					description = <"Finding(s) which are highly suspicious of malgnancy - Appropriate action should be taken.">
				>
				["at0015"] = <
					text = <"6: Known, biopsy-proven malignancy">
					description = <"Identified lesions have already been proven malignant by biopsy.Action should be taken.">
				>
				["at0016"] = <
					text = <"Modality">
					description = <"The imaging modality against which the grade was assessed. ">
				>
				["at0017"] = <
					text = <"Mammography">
					description = <"The grade was assessed on mammography studies.">
				>
				["at0018"] = <
					text = <"MRI">
					description = <"The grade was assessed on the basis of MRI studies.">
				>
				["at0019"] = <
					text = <"Ultrasound">
					description = <"The grade was assessed on the basis of ultrasound studies.">
				>
				["at0020"] = <
					text = <"Integrated">
					description = <"The grade takes account of all prior imaging studies and clinical findings.">
				>
			>
		>

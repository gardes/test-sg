definition
	CLUSTER[at0000] matches {	-- BI-RAD razredi
		items cardinality matches {1..*; unordered} matches {
			ELEMENT[at0016] occurrences matches {0..1} matches {	-- *Modality(en)
				value matches {
					DV_CODED_TEXT matches {
						defining_code matches {
							[local::
							at0017, 	-- *Mammography(en)
							at0018, 	-- *MRI(en)
							at0019, 	-- *Ultrasound(en)
							at0020]	-- *Integrated(en)
						}
					}
				}
			}
			ELEMENT[at0005] occurrences matches {0..1} matches {	-- BI-RAD razred
				value matches {
					DV_CODED_TEXT matches {
						defining_code matches {
							[local::
							at0006, 	-- 0: Nepopolno
							at0007, 	-- 1: Negativno
							at0008, 	-- 2: Benigna ugotovitev
							at0009, 	-- 3: Verjetnost benigne ugotovitve
							at0010, 	-- 4: Sumljiva nepravilnost
							at0011, 	-- 4a: Sumljiva nepravilnost - majhna skrb
							at0012, 	-- 4b: Sumljiva nepravilnost - vmesna skrb
							at0013, 	-- 4c: Sumljiva nepravilnost - zmerna skrb
							at0014, 	-- 5: Visoka domneva malignosti
							at0015]	-- 6: Ugotovljeno, z biopsijo dokazana malignost
						}
					}
				}
			}
			ELEMENT[at0004] occurrences matches {0..1} matches {	-- Opombe
				value matches {
					DV_TEXT matches {*}
				}
			}
		}
	}


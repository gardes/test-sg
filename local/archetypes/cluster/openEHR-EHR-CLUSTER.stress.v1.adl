	>

definition
	CLUSTER[at0000] matches {	-- Stress
		items cardinality matches {1..*; unordered} matches {
			ELEMENT[at0001] matches {	-- Perceived Stress Level
				value matches {
					1|[local::at0005], 	-- Happy
					2|[local::at0006], 	-- Neutral
					3|[local::at0007], 	-- Moderate
					4|[local::at0008], 	-- A bit stressful
					5|[local::at0009], 	-- Stressful
					6|[local::at0010]  	-- Very stressful
				}
			}
			ELEMENT[at0002] occurrences matches {0..1} matches {	-- Date of the Observation
				value matches {
					DV_DATE_TIME matches {*}
				}
			}
			ELEMENT[at0003] occurrences matches {0..1} matches {	-- Observation note
				value matches {
					DV_TEXT matches {*}
				}
			}
		}
	}


	details = <
		["en"] = <
			language = <[ISO_639-1::en]>
			purpose = <"The aim of this archetype is to enable reporting the perceived level of stress, as an observation of daily living.">
			use = <"Used to record the perceived level of stress.">
			misuse = <"">
			copyright = <"© openEHR Foundation">
		>
	>
	lifecycle_state = <"Initial">
	other_contributors = <>
	other_details = <

	>

definition
	CLUSTER[at0000] matches {	-- Breast exam screen
		items cardinality matches {1..*; unordered} matches {
			CLUSTER[at0002] occurrences matches {0..*} matches {	-- Breast findings
				items cardinality matches {1..*; unordered} matches {
					allow_archetype CLUSTER[at0001] occurrences matches {0..1} matches {	-- Breast location
						include
							archetype_id/value matches {/openEHR-EHR-CLUSTER\.anatomical_location(-[a-zA-Z0-9_]+)*\.v1/}
					}
					ELEMENT[at0003] occurrences matches {0..*} matches {	-- Breast finding
						value matches {
							DV_CODED_TEXT matches {
								defining_code matches {
									[local::
									at0004, 	-- Mass
									at0005, 	-- Nipple discharge
									at0006, 	-- Skin tethering
									at0007, 	-- Redness
									at0008, 	-- Nipple changes
									at0009, 	-- Scar
									at0010]	-- Mole
								}
							}
						}
					}
				}
			}
		}
	}

